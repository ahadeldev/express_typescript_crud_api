{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                          // Specify ECMAScript target version
    "module": "CommonJS",                        // Node.js uses CommonJS modules
    "rootDir": "./src",                          // Root directory of input files
    "outDir": "./dist",                          // Output directory for compiled files
    "strict": true,                              // Enable strict type checking
    "moduleResolution": "node",                 // Resolve modules like Node.js
    "esModuleInterop": true,                    // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,   // Ensure file names are case-sensitive
    "skipLibCheck": true,                       // Skip type checking for dependencies

    /* Advanced Options */
    "resolveJsonModule": true,                  // Enable importing JSON files
    "sourceMap": true,                          // Generate source maps for debugging
    "noImplicitAny": true,                      // Raise errors for implicit "any" types
    "noUnusedLocals": true,                     // Error on unused variables
    "noUnusedParameters": true,                 // Error on unused function parameters
    "noFallthroughCasesInSwitch": true,         // Ensure switch statements are exhaustive
    "allowJs": false,                           // Disallow JavaScript files
    "incremental": true                         // Enable incremental compilation
  },
  "include": ["src/**/*"],                      // Include all TypeScript files in "src"
  "exclude": ["node_modules", "dist"]           // Exclude compiled and dependency files
}
